<h2 class="page-header-text">Log in</h2>

<div class="grid-x">
  <div class="devise-user-tile callout cell small-11 medium-8 large-6" >

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "horizons-body-font" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "horizons-body-font" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "horizons-body-font" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "button bold horizons-body-font" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
